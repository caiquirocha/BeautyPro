<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="br.com.beautybox.atendimentos.AtendimentoFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:stretchColumns="1"
        android:layout_height="wrap_content">

        <TableRow android:gravity="center_vertical">
            <TextView
                android:text="Cliente:"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <!--android:drawableRight="@android:drawable/ic_menu_search" -->
        </TableRow>
        <TableRow android:gravity="center_vertical">
            <TextView
                android:text="Pagamento:"
                android:textStyle="bold" />

            <RadioGroup android:id="@+id/radio_group_forma_pagamento" android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/radio_a_vista"
                    android:layout_width="wrap_content"
                    android:text="À vista"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:id="@+id/radio_a_prazo"
                    android:text="À prazo"
                    android:layout_height="wrap_content"/>


            </RadioGroup>
        </TableRow>

    </TableLayout>



    <!-- o valor no padding é o segredo  p/ a borda ser renderizada -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="0dp"
        android:layout_weight="1"
        android:padding="0dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/listview_shape"
            android:padding="5dp"
            tools:listitem="@android:layout/simple_list_item_1" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:tint="@android:color/white"
            android:id="@+id/fab"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:src="@android:drawable/ic_input_add"
            android:layout_gravity="bottom|right"
            android:layout_height="wrap_content" />

    </FrameLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total:"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_valor_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$0,00"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>


</LinearLayout>


