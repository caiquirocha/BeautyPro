<?xml version="1.0" encoding="utf-8"?>

<!-- utilizado no listview do AtendimentoFragment p/ listar as sessÃµes do atendimento -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_data_horario"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_servicos"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txt_data_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_subTotal"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_below="@id/txt_servicos"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 0,00" />

    <ImageButton
        android:id="@+id/btn_edit"
        android:layout_below="@id/txt_servicos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mode_edit_black_24dp" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_below="@id/txt_servicos"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_delete_black_24dp" />

</RelativeLayout>